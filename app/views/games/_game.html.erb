<div id="<%= dom_id game %>" class="max-w-sm w-full lg:max-w-full lg:flex">
  <div class="h-48 lg:h-auto flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('/img/card-left.jpg')" title="Woman holding a mug">
  </div>
  <div class="border border-gray-400 lg:border-t lg:border-gray-400 bg-white rounded-md p-4 flex flex-col justify-between leading-normal w-full">
    <div class="mb-8">
      <div class="text-gray-900 font-bold text-xl mb-2">Choose Winner</div>
    </div>
    <div class="flex items-center justify-between">
      <div><%= show_svg(away_team(game)) %>
        <%= link_to_if !started?(game), game.away_team, edit_game_path(game), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </div>
      <p class="text-sm text-gray-600 flex items-center">
        <% if started?(game) %>
          <svg class="fill-current text-gray-500 w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path d="M4 8V6a6 6 0 1 1 12 0v2h1a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-8c0-1.1.9-2 2-2h1zm5 6.73V17h2v-2.27a2 2 0 1 0-2 0zM7 6v2h6V6a3 3 0 0 0-6 0z"/>
          </svg>
          Game Locked
        <% else %>
          Time until kickoff: <%= time_ago_in_words(game.game_time) %>
        <% end %>
      </p>
      <div><%= show_svg(home_team(game)) %>
        <%= link_to_if !started?(game), game.home_team, edit_game_path(game), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </div>
    </div>
    <div class="flex items-center justify-between">
      <div class="text-sm">
        <p class="text-gray-600"><%= localized_game_time(game) %></p>
      </div>
    </div>
  </div>
</div>
